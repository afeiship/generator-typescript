{
  "name": "swc-app",
  "version": "1.0.0",
  "description": "<%= description %>",
  "homepage": "https://js.work",
  "scripts": {
    "dev": "concurrently \"yarn watch-compile\" \"yarn watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/main.js",
    "build": "swc src -d dist",
    "start": "NODE_ENV=production node dist/main.js",
    "clean": "rm -rf dist"
  },
  "license": "MIT",
  "devDependencies": {
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "tslib": "^2.3.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.36",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.1",
    "chokidar": "^3.5.3",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@jswork/next": "^1.0.9",
    "@jswork/next-dt-log": "^1.1.3",
    "@jswork/next-require": "^1.0.3",
    "@jswork/next-sets": "^1.0.1",
    "@jswork/next-yaml-configuration": "^1.0.1",
    "args-parser": "^1.3.0"
  }
}